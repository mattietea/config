{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": ["Bash(cat:*)", "Bash(grep:*)", "Bash(tree:*)"]
  },
  "enabledPlugins": {
    "context7@claude-plugins-official": true
  },
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "pre-commit run --all-files 2>&1 >&2"
          }
        ]
      }
    ]
  }
}
