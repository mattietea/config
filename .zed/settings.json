{
  "format_on_save": "on",
  "load_direnv": "direct",
  "languages": {
    "JSON": {
      "format_on_save": "on",
      "formatter": "language_server"
    },
    "Markdown": {
      "format_on_save": "on"
    },
    "Nix": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "nixfmt",
          "arguments": ["-"]
        }
      },
      "language_servers": ["nixd", "!nil", "..."]
    },
    "YAML": {
      "format_on_save": "on",
      "formatter": "language_server"
    }
  },
  "lsp": {
    "nixd": {
      "settings": {
        "nixd": {
          "diagnostic": {
            "suppress": ["sema-extra-with"]
          }
        }
      }
    }
  }
}
